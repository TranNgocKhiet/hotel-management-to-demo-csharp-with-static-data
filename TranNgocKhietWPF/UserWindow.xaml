<Window x:Class="TranNgocKhietWPF.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranNgocKhietWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="UserWindow" 
        Width="850"
        Height="900">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Frame x:Name="frMain" 
               VerticalAlignment="Stretch" 
               Grid.Row="0"
               Grid.RowSpan="15"
               Grid.Column="0"
               Grid.ColumnSpan="16"
               NavigationUIVisibility="Hidden"/>

        <Button Content="Booking Reservation History" 
                Name="ToBookingReservationHistoryPageButton" 
                Click="ToBookingReservationHistoryPageButton_Click" 
                HorizontalAlignment="Left"
                Height="30" 
                Width="160"
                Grid.Column="1"
                Grid.Row="15"
                Grid.ColumnSpan="4"/>

        <Button Content="Edit Profile"
                Name="ToEditProfiletPageButton" 
                Click="ToEditProfiletPageButton_Click" 
                HorizontalAlignment="Left"
                Height="30" 
                Width="160"
                Grid.Column="6"
                Grid.Row="15"
                Grid.ColumnSpan="4"/>

        <Button Content="Log Out"
                Height="30" 
                Width="160"
                Grid.Column="11"
                Grid.Row="15"
                Grid.ColumnSpan="4"
                Click="LogoutButton_Click"/>
    </Grid>
</Window>
