<Window x:Class="TranNgocKhietWPF.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranNgocKhietWPF"
        mc:Ignorable="d"
        Title="Customer Dialog" 
        Height="400" Width="400" 
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Full Name" Grid.Row="0"/>
        <TextBox x:Name="txtFullName" Grid.Row="0" Margin="100,0,0,5"/>

        <Label Content="Telephone" Grid.Row="1"/>
        <TextBox x:Name="txtTelephone" Grid.Row="1" Margin="100,0,0,5"/>

        <Label Content="Email" Grid.Row="2"/>
        <TextBox x:Name="txtEmail" Grid.Row="2" Margin="100,0,0,5"/>

        <Label Content="Birthday" Grid.Row="3"/>
        <TextBox x:Name="txtBirthday" Grid.Row="3" Margin="100,0,0,5"/>

        <Label Content="Status" Grid.Row="4"/>
        <TextBox x:Name="txtStatus" Grid.Row="4" Margin="100,0,0,5"/>

        <Label Content="Password" Grid.Row="5"/>
        <TextBox x:Name="txtPassword" Grid.Row="5" Margin="100,0,0,5"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
