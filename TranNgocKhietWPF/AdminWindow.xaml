<Window x:Class="TranNgocKhietWPF.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranNgocKhietWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AdminWindow" 
        Width="950"
        Height="900">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Frame x:Name="frMain" 
               VerticalAlignment="Stretch" 
               Grid.Row="0"
               Grid.RowSpan="15"
               Grid.Column="0"
               Grid.ColumnSpan="18"
               NavigationUIVisibility="Hidden"/>

        <Button Content="Customer List" 
                Name="ToCustomerListPageButton" 
                Click="ToCustomerListPageButton_Click" 
                HorizontalAlignment="Left"
                Height="30" 
                Width="80"
                Grid.Column="1"
                Grid.Row="15"
                Grid.ColumnSpan="2"/>

        <Button Content="Room Information List"
                Name="ToRoomInformationListPageButton" 
                Click="ToRoomInformationListPageButton_Click" 
                HorizontalAlignment="Right"
                Height="30" 
                Width="130"
                Grid.Column="2"
                Grid.Row="15"
                Grid.ColumnSpan="4"/>


        <Button Content="Booking Reservation Report"
                Name="ToBookingReservationReportPageButton" 
                Click="ToBookingReservationReportPageButton_Click" 
                HorizontalAlignment="Right"
                Height="30" 
                Width="160"
                Grid.Column="10"
                Grid.Row="15"
                Grid.ColumnSpan="4"/>

        <Button Content="Log Out"
                HorizontalAlignment="Right"
                Height="30" 
                Width="100"
                Grid.Column="15"
                Grid.Row="15"
                Grid.ColumnSpan="2"
                Click="LogoutButton_Click"/>
    </Grid>
</Window>
